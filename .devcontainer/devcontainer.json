{
	"name": "Python 3",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "..",
		"args": {
			"VARIANT": "3.10",
			"NODE_VERSION": "none"
		}
	},

	"customizations": {
		"vscode": {
			"settings": {
				"python.defaultInterpreterPath": "/home/vscode/venv/bin/python"
			},
			"extensions": [
				"ms-python.python",
				"ms-python.vscode-pylance",
				"GitHub.copilot",
				"ms-vscode.makefile-tools"
			]
		}
	},

	// Docker and other features
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"azure-cli": "latest"
	},

	"remoteUser": "vscode"
}